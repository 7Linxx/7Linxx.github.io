---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import PageHeader from '@components/PageHeader.astro'
import { getCollection, render } from 'astro:content'
import type { CollectionEntry } from 'astro:content'

export async function getStaticPaths() {
  const posts = await getCollection('posts')
  
  if (!posts || posts.length === 0) {
    console.warn('No posts found in collection')
    return []
  }

  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }))
}

interface Props {
  post: CollectionEntry<'posts'>
}

const { post } = Astro.props
const { Content } = await render(post)

const author = {
  name: post.data.author,
  image: '/posts/post-image-1.png',
  bio: 'Estudiante de Ingenier√≠a de Sistemas',
}
---

<DefaultLayout title={post.data.title} description={post.data.description} url={`/blog/${post.id}`}>
  <PageHeader
    title={post.data.title}
    subtitle={post.data.description}
    author={author}
    bgType="bordered"
  />
  <section class="my-12">
    <div class="narrow space-content container">
      <Content />
    </div>
  </section>
</DefaultLayout>

<style lang="scss" is:global>
  .narrow {
    margin-inline: auto;
    max-width: 65ch;
  }
</style>
