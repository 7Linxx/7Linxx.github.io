---
import Logo from './Logo.astro'
import { Heading, Link } from 'accessible-astro-components'

/**
 * Footer Component
 *
 * @description A component that displays the footer of the website
 */
const currentYear = new Date().getFullYear()
---

<footer>
  <section class="py-20">
    <Heading level="h2" class="sr-only">Footer</Heading>
    <div class="container grid grid-cols-1 gap-8 md:grid-cols-3">
      <div class="flex flex-col gap-4">
        <Heading level="h3" size="h6">Navegación</Heading>
        <ul class="flex flex-col gap-2">
          <li><Link href="/">Inicio</Link></li>
          <li><Link href="/portfolio">Portfolio</Link></li>
          <li><Link href="/blog">Blog</Link></li>
          <li><Link href="/contact">Contacto</Link></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <Heading level="h3" size="h6">Contacto</Heading>
        <ul class="flex flex-col gap-2">
          <li><Link href="mailto:lcalderonmo@unbosque.edu.co">lcalderonmo@unbosque.edu.co</Link></li>
          <li><Link isExternal href="https://github.com/7Linxx/">GitHub</Link></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <Logo loading="lazy" />
        <p class="leading-[1.75]">
          Estudiante de Ingeniería de Sistemas, apasionada por el diseño y el desarrollo frontend.
        </p>
      </div>
    </div>
  </section>
  <section class="py-8">
    <div class="container flex flex-col gap-4 md:flex-row md:justify-between">
      <p>&copy; {currentYear} - Laura Calderón</p>
      <p>Hecho con ❤️ por <Link isExternal href="https://github.com/7Linxx/">7Linxx</Link></p>
    </div>
  </section>
</footer>

<style>
  section {
    border-top: 1px solid var(--border-color-subtle);
  }
</style>